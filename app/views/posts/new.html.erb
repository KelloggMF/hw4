<h1>New Post</h1>

<br>

<%= form_with :model => @post do |form| %>
  <%= form.hidden_field "place_id" %>

  <div class="mb-3">
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </div>

  <div class="mb-3">
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </div>

  <div class="mb-3">
      <%= form.label "uploaded_image", :class => "form-label" %>
      <%= form.file_field "uploaded_image", :class => "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  <div class="mb-3">
  <br>
  <p>
    <%= form.submit "Add Post", :class => "btn btn-success" %>
  </p>
<% end %>
